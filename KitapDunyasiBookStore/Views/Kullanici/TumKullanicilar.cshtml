@model List<Veritabani_Odevi.Models.Kullanici>

@{
    ViewData["Title"] = "Hesap İşlemleri";
}

<style>
    :root {
        --primary-color: #16202A;
        --primary-light: #1E2A38;
        --secondary-color: #3B82F6;
        --accent-color: #F59E0B;
        --success-color: #10B981;
        --dark-color: #0F1419;
        --light-gray: #1A2332;
        --medium-gray: #374151;
        --text-color: #F9FAFB;
        --text-secondary: #D1D5DB;
        --text-muted: #9CA3AF;
        --border-color: #374151;
        --card-bg: #1E2A38;
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.4);
    }

    .accounts-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        color: var(--text-color);
        padding: 40px 20px;
        margin-bottom: 40px;
        border-radius: 12px;
        border: 1px solid var(--border-color);
    }

    .accounts-header h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .accounts-header p {
        color: var(--text-muted);
        font-size: 1.1rem;
    }

    .accounts-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .table-responsive {
        border-radius: 12px;
        box-shadow: var(--shadow);
        overflow: hidden;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
    }

    .table {
        margin-bottom: 0;
        color: var(--text-color);
    }

    .table thead {
        background: linear-gradient(135deg, var(--secondary-color) 0%, var(--accent-color) 100%);
        color: var(--text-color);
        font-weight: 600;
    }

    .table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid var(--border-color);
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.1);
        border-color: var(--secondary-color);
    }

    .table td {
        color: var(--text-color);
    }

    .btn-group-actions {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }

    .btn-group-actions .btn {
        flex: 1;
        min-width: 40px;
        padding: 6px 10px;
        font-size: 0.75rem;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-info {
        background: var(--secondary-color);
        color: white;
    }

    .btn-info:hover {
        background: #2563EB;
    }

    .btn-warning {
        background: var(--accent-color);
        color: var(--dark-color);
    }

    .btn-warning:hover {
        background: #D97706;
    }

    .btn-danger {
        background: #DC2626;
        color: white;
    }

    .btn-danger:hover {
        background: #991B1B;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .bg-danger {
        background: #DC2626 !important;
        color: white !important;
    }

    .bg-primary {
        background: var(--secondary-color) !important;
        color: white !important;
    }

    .alert {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        color: var(--text-color);
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        border-color: var(--success-color);
        color: var(--success-color);
    }

    .alert-danger {
        background: rgba(220, 38, 38, 0.1);
        border-color: #DC2626;
        color: #FCA5A5;
    }

    .btn-success {
        background: var(--success-color);
        border: none;
        color: white;
    }

    .btn-success:hover {
        background: #059669;
        color: white;
    }
</style>

<div class="container mt-4 mb-5">
    <div class="accounts-header">
        <h1>👥 Hesap İşlemleri</h1>
        <p>Tüm kullanıcı hesaplarını yönetin ve düzenleyin</p>
    </div>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>✓ Başarılı!</strong> @TempData["Mesaj"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>✗ Hata!</strong> @TempData["Hata"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="accounts-actions">
        <div>
            <h5 style="color: var(--text-color); margin-bottom: 0;">Toplam: <span style="color: var(--secondary-color); font-weight: 700;">@Model.Count</span> Kullanıcı</h5>
        </div>
        <a href="@Url.Action("GirisKayit", "Kullanici", new { id = 0 })" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Hesap Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 15%;">Ad Soyad</th>
                        <th style="width: 20%;">E-posta</th>
                        <th style="width: 12%;">Telefon</th>
                        <th style="width: 15%;">Adres</th>
                        <th style="width: 10%;">Kayıt Tarihi</th>
                        <th style="width: 8%;">Derece</th>
                        <th style="width: 8%;">Rol</th>
                        <th style="width: 25%; text-align: center;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr>
                            <td><strong>@k.KullaniciID</strong></td>
                            <td>@k.Ad @k.Soyad</td>
                            <td>@k.Eposta</td>
                            <td>@(string.IsNullOrEmpty(k.Telefon) ? "-" : k.Telefon)</td>
                            <td>@(string.IsNullOrEmpty(k.Adres) ? "-" : k.Adres)</td>
                            <td>@k.KayitTarihi.ToString("dd.MM.yyyy")</td>
                            <td>@k.Derecelendirme ⭐</td>

                            <td>
                                @if (k.Rol == "Admin")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Üye</span>
                                }
                            </td>

                            <td>
                                <div class="btn-group-actions">
                                    <a asp-controller="Kullanici"
                                       asp-action="Detay"
                                       asp-route-id="@k.KullaniciID"
                                       class="btn btn-info">
                                        👁️
                                    </a>

                                    <a asp-controller="Kullanici"
                                       asp-action="Duzenle"
                                       asp-route-id="@k.KullaniciID"
                                       class="btn btn-warning">
                                        ✏️
                                    </a>

                                    <a asp-controller="Kullanici"
                                       asp-action="Sil"
                                       asp-route-id="@k.KullaniciID"
                                       class="btn btn-danger"
                                       onclick="return confirm('Bu kullanıcı silinsin mi?')">
                                        🗑️
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <h5>Henüz hesap bulunmuyor</h5>
            <p>Yeni bir hesap eklemek için aşağıdaki butona tıklayın.</p>
        </div>
    }

</div>
