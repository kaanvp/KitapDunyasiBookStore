@model Veritabani_Odevi.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="container mt-4">
    <div class="alert alert-danger">
        <h4>Bu kullanıcıyı silmek istediğinize emin misiniz?</h4>
        <p><strong>@Model.Ad @Model.Soyad</strong> (@Model.Eposta)</p>
    </div>

    <form asp-action="Sil" method="post">
        <input type="hidden" asp-for="KullaniciID" />

        <button type="submit" class="btn btn-danger">Evet, Sil</button>

        <a asp-action="TumKullanicilar" class="btn btn-secondary ms-2">Vazgeç</a>
    </form>
</div>
