@model List<Veritabani_Odevi.DTOs.KullaniciAktiviteRaporu>
@{
    ViewData["Title"] = "En Aktif Kullanıcılar";
}

<div class="container-fluid px-4 py-5">
    <div class="header-section mb-5">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h1 class="display-5 fw-bold text-gradient mb-2">
                    <i class="bi bi-people-fill me-3"></i>En Aktif Kullanıcılar
                </h1>
                <p class="text-muted mb-0">Toplam @Model.Count kullanıcı listeleniyor</p>
            </div>
            <div class="stats-badges">
                <span class="badge-custom">
                    <i class="bi bi-graph-up-arrow me-2"></i>Aktivite Raporu
                </span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3>Henüz Aktivite Bulunmuyor</h3>
            <p class="text-muted">Kullanıcı aktiviteleri burada görünecektir.</p>
        </div>
    }
    else
    {
        <div class="row g-4 mb-4">
            <div class="col-md-3 col-sm-6">
                <div class="stat-card stat-card-purple">
                    <div class="stat-icon">
                        <i class="bi bi-chat-dots-fill"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Sum(x => x.YorumSayisi)</h3>
                        <p>Toplam Yorum</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stat-card stat-card-blue">
                    <div class="stat-icon">
                        <i class="bi bi-book-fill"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Sum(x => x.SatistakiKitapSayisi)</h3>
                        <p>Satışta Kitap</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stat-card stat-card-orange">
                    <div class="stat-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Average(x => x.OrtalamaVerdigiPuan).ToString("0.0")</h3>
                        <p>Ort. Verilen Puan</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stat-card stat-card-green">
                    <div class="stat-icon">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Average(x => x.AlinanOrtalamaPuan).ToString("0.0")</h3>
                        <p>Ort. Alınan Puan</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-card">
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="th-content">
                                    <i class="bi bi-person-circle me-2"></i>Kullanıcı
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-chat-square-text me-2"></i>Yorumlar
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-star-half me-2"></i>Verdiği Puan
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-award me-2"></i>Aldığı Puan
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-book-half me-2"></i>Satışta
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>
                                    <div class="user-info">
                                        <div class="user-avatar">
                                            @r.AdSoyad.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="user-details">
                                            <div class="user-name">@r.AdSoyad</div>
                                            <div class="user-email">@r.Eposta</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="metric-badge badge-purple">
                                        <i class="bi bi-chat-dots me-1"></i>@r.YorumSayisi
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="rating-display">
                                        <span class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(r.OrtalamaVerdigiPuan))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else if (i - r.OrtalamaVerdigiPuan < 1)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </span>
                                        <span class="rating-value">@r.OrtalamaVerdigiPuan.ToString("0.0")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="rating-display">
                                        <span class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(r.AlinanOrtalamaPuan))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else if (i - r.AlinanOrtalamaPuan < 1)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </span>
                                        <span class="rating-value">@r.AlinanOrtalamaPuan.ToString("0.0")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="metric-badge badge-blue">
                                        <i class="bi bi-book me-1"></i>@r.SatistakiKitapSayisi
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        min-height: 100vh;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .text-gradient {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .header-section {
        animation: fadeInDown 0.6s ease-out;
    }

    .stats-badges .badge-custom {
        background: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.3);
        color: #fbbf24;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.875rem;
        display: inline-flex;
        align-items: center;
    }

    .stat-card {
        background: rgba(30, 41, 59, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 1.75rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
        transition: all 0.3s ease;
        animation: fadeInUp 0.6s ease-out;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, currentColor, transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

            .stat-card:hover::before {
                opacity: 1;
            }

    .stat-card-purple {
        color: #a78bfa;
    }

    .stat-card-blue {
        color: #60a5fa;
    }

    .stat-card-orange {
        color: #fb923c;
    }

    .stat-card-green {
        color: #34d399;
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        flex-shrink: 0;
    }

    .stat-content h3 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        color: #fff;
    }

    .stat-content p {
        font-size: 0.875rem;
        color: #94a3b8;
        margin: 0;
        font-weight: 500;
    }

    .table-card {
        background: rgba(30, 41, 59, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 0;
        overflow: hidden;
        animation: fadeInUp 0.8s ease-out;
    }

    .modern-table {
        width: 100%;
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

        .modern-table thead {
            background: rgba(15, 23, 42, 0.6);
        }

            .modern-table thead th {
                padding: 1.25rem 1.5rem;
                font-weight: 600;
                font-size: 0.875rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                color: #94a3b8;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

    .th-content {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modern-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

        .modern-table tbody tr:hover {
            background: rgba(251, 191, 36, 0.05);
            transform: scale(1.01);
        }

        .modern-table tbody tr:last-child {
            border-bottom: none;
        }

    .modern-table tbody td {
        padding: 1.5rem 1.5rem;
        color: #e2e8f0;
        vertical-align: middle;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-avatar {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.25rem;
        color: #0f172a;
        flex-shrink: 0;
    }

    .user-details {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .user-name {
        font-weight: 600;
        font-size: 1rem;
        color: #fff;
    }

    .user-email {
        font-size: 0.875rem;
        color: #94a3b8;
    }

    .metric-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .badge-purple {
        background: rgba(167, 139, 250, 0.1);
        color: #a78bfa;
        border: 1px solid rgba(167, 139, 250, 0.2);
    }

    .badge-blue {
        background: rgba(96, 165, 250, 0.1);
        color: #60a5fa;
        border: 1px solid rgba(96, 165, 250, 0.2);
    }

    .rating-display {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .rating-stars {
        display: flex;
        gap: 0.125rem;
        color: #fbbf24;
        font-size: 0.875rem;
    }

    .rating-value {
        font-weight: 700;
        color: #fff;
        font-size: 1rem;
    }

    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: rgba(30, 41, 59, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        animation: fadeIn 0.6s ease-out;
    }

    .empty-icon {
        font-size: 5rem;
        color: #475569;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        color: #e2e8f0;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@media (max-width: 768px) {
        .user-info

    {
        flex-direction: column;
        align-items: flex-start;
    }

    .stat-card {
        padding: 1.25rem;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        font-size: 1.5rem;
    }

    .stat-content h3 {
        font-size: 1.5rem;
    }

    }
</style>