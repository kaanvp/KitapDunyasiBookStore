@model List<Veritabani_Odevi.DTOs.KategoriIstatistik>
@{
    ViewData["Title"] = "Kategori Bazlı Satış Raporu";
}

<div class="container-fluid px-4 py-5">
    <div class="header-section mb-5">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h1 class="display-5 fw-bold text-gradient mb-2">
                    <i class="bi bi-bar-chart-fill me-3"></i>Kategori Bazlı Satış Raporu
                </h1>
                <p class="text-muted mb-0">@Model.Count kategori analizi ve satış performansı</p>
            </div>
            <div class="stats-badges">
                <span class="badge-custom">
                    <i class="bi bi-graph-up me-2"></i>Detaylı İstatistikler
                </span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3>Henüz Veri Bulunmuyor</h3>
            <p class="text-muted">Kategori istatistikleri burada görünecektir.</p>
        </div>
    }
    else
    {
        <!-- Özet Kartlar -->
        <div class="row g-4 mb-5">
            <div class="col-xl-3 col-md-6">
                <div class="summary-card summary-card-blue">
                    <div class="summary-icon">
                        <i class="bi bi-cart-check-fill"></i>
                    </div>
                    <div class="summary-content">
                        <h3>@Model.Sum(x => x.ToplamSatisAdedi)</h3>
                        <p>Toplam Satış</p>
                        <div class="summary-trend">
                            <i class="bi bi-arrow-up-short"></i>
                            <span>Tüm Kategoriler</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="summary-card summary-card-purple">
                    <div class="summary-icon">
                        <i class="bi bi-bookshelf"></i>
                    </div>
                    <div class="summary-content">
                        <h3>@Model.Sum(x => x.ToplamKitapAdedi)</h3>
                        <p>Toplam Kitap</p>
                        <div class="summary-trend">
                            <i class="bi bi-arrow-up-short"></i>
                            <span>Stokta Mevcut</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="summary-card summary-card-green">
                    <div class="summary-icon">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="summary-content">
                        <h3>@Model.Sum(x => x.ToplamCiro).ToString("C")</h3>
                        <p>Toplam Ciro</p>
                        <div class="summary-trend">
                            <i class="bi bi-arrow-up-short"></i>
                            <span>Genel Gelir</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="summary-card summary-card-orange">
                    <div class="summary-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="summary-content">
                        <h3>@Model.Average(x => x.OrtalamaPuan).ToString("0.0")</h3>
                        <p>Ortalama Puan</p>
                        <div class="summary-trend">
                            <i class="bi bi-star-half"></i>
                            <span>Müşteri Memnuniyeti</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kategori Kartları (Grid) -->
        <div class="row g-4 mb-4">
            @foreach (var r in Model.OrderByDescending(x => x.ToplamCiro))
            {
                var percentage = (decimal)r.ToplamCiro / Model.Sum(x => x.ToplamCiro) * 100;
                <div class="col-xl-4 col-md-6">
                    <div class="category-card">
                        <div class="category-header">
                            <div class="category-icon-wrapper">
                                <i class="bi bi-tag-fill"></i>
                            </div>
                            <div class="category-title-wrapper">
                                <h4 class="category-title">@r.KategoriAdi</h4>
                                <span class="category-badge">@r.KategoriKitapSayisi kitap</span>
                            </div>
                        </div>

                        <div class="category-stats">
                            <div class="stat-row">
                                <div class="stat-item">
                                    <div class="stat-label">
                                        <i class="bi bi-cart3 me-2"></i>Satış Adedi
                                    </div>
                                    <div class="stat-value">@r.ToplamSatisAdedi</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-label">
                                        <i class="bi bi-book me-2"></i>Kitap Adedi
                                    </div>
                                    <div class="stat-value">@r.ToplamKitapAdedi</div>
                                </div>
                            </div>

                            <div class="stat-row">
                                <div class="stat-item full-width">
                                    <div class="stat-label">
                                        <i class="bi bi-cash-coin me-2"></i>Toplam Ciro
                                    </div>
                                    <div class="stat-value-large">@r.ToplamCiro.ToString("C")</div>
                                </div>
                            </div>

                            <div class="progress-section">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="progress-label">Ciro Payı</span>
                                    <span class="progress-percentage">@percentage.ToString("0.0")%</span>
                                </div>
                                <div class="custom-progress">
                                    <div class="custom-progress-bar" style="width: @percentage.ToString("0.0")%"></div>
                                </div>
                            </div>

                            <div class="rating-section">
                                <div class="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(r.OrtalamaPuan))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else if (i - r.OrtalamaPuan < 1)
                                        {
                                            <i class="bi bi-star-half"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>
                                <span class="rating-value">@r.OrtalamaPuan.ToString("0.0")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Detaylı Tablo -->
        <div class="table-section">
            <div class="table-header">
                <h3><i class="bi bi-table me-2"></i>Detaylı Kategori Analizi</h3>
            </div>
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="th-content">
                                    <i class="bi bi-tag me-2"></i>Kategori
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-cart-check me-2"></i>Satış Adedi
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-book me-2"></i>Kitap Adedi
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-cash-stack me-2"></i>Toplam Ciro
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-star me-2"></i>Ortalama Puan
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-collection me-2"></i>Kategori Kitap
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.OrderByDescending(x => x.ToplamCiro))
                        {
                            <tr>
                                <td>
                                    <div class="category-cell">
                                        <div class="category-avatar">
                                            <i class="bi bi-bookmark-fill"></i>
                                        </div>
                                        <span class="category-name">@r.KategoriAdi</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="metric-badge badge-blue">@r.ToplamSatisAdedi</span>
                                </td>
                                <td class="text-center">
                                    <span class="metric-badge badge-purple">@r.ToplamKitapAdedi</span>
                                </td>
                                <td class="text-center">
                                    <span class="metric-badge badge-green">@r.ToplamCiro.ToString("C")</span>
                                </td>
                                <td class="text-center">
                                    <div class="rating-inline">
                                        <span class="rating-stars-small">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(r.OrtalamaPuan))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else if (i - r.OrtalamaPuan < 1)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </span>
                                        <span class="rating-value-small">@r.OrtalamaPuan.ToString("0.0")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="metric-badge badge-orange">@r.KategoriKitapSayisi</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

