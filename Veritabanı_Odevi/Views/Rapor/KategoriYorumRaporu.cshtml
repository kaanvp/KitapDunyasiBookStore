@model List<Veritabani_Odevi.DTOs.KategoriYorumIstatistik>
@{
    ViewData["Title"] = "Kategori Yorum Raporu";
}

<div class="container-fluid px-4 py-5">
    <div class="header-section mb-5">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h1 class="display-5 fw-bold text-gradient mb-2">
                    <i class="bi bi-chat-quote-fill me-3"></i>Kategori Yorum Analizi
                </h1>
                <p class="text-muted mb-0">@Model.Count kategori için yorum ve değerlendirme raporu</p>
            </div>
            <div class="stats-badges">
                <span class="badge-custom">
                    <i class="bi bi-star-fill me-2"></i>Müşteri Geri Bildirimleri
                </span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-chat-left-dots"></i>
            </div>
            <h3>Henüz Yorum Bulunmuyor</h3>
            <p class="text-muted">Kategori yorumları burada görünecektir.</p>
        </div>
    }
    else
    {
        <!-- Genel İstatistik Kartları -->
        <div class="row g-4 mb-5">
            <div class="col-xl-3 col-md-6">
                <div class="overview-card overview-card-teal">
                    <div class="overview-icon">
                        <i class="bi bi-collection-fill"></i>
                    </div>
                    <div class="overview-content">
                        <h3>@Model.Sum(x => x.ToplamKitapSayisi)</h3>
                        <p>Toplam Kitap</p>
                        <div class="overview-subtitle">
                            <i class="bi bi-bookmark-check"></i>
                            <span>Tüm Kategoriler</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="overview-card overview-card-indigo">
                    <div class="overview-icon">
                        <i class="bi bi-chat-dots-fill"></i>
                    </div>
                    <div class="overview-content">
                        <h3>@Model.Sum(x => x.ToplamYorumSayisi)</h3>
                        <p>Toplam Yorum</p>
                        <div class="overview-subtitle">
                            <i class="bi bi-chat-square-text"></i>
                            <span>Geri Bildirim</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="overview-card overview-card-amber">
                    <div class="overview-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="overview-content">
                        <h3>@Model.Average(x => x.OrtalamaPuan).ToString("0.0")</h3>
                        <p>Ortalama Puan</p>
                        <div class="overview-subtitle">
                            <i class="bi bi-trophy"></i>
                            <span>Genel Memnuniyet</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="overview-card overview-card-rose">
                    <div class="overview-icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="overview-content">
                        <h3>@ViewBag.GenelFarkliYorumcu</h3>
                        <p>Toplam Yorumcu</p>
                        <div class="overview-subtitle">
                            <i class="bi bi-person-check"></i>
                            <span>Benzersiz Kullanıcı</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kategori Detay Kartları -->
        <div class="row g-4 mb-4">
            @foreach (var r in Model.OrderByDescending(x => x.ToplamYorumSayisi))
            {
                var yorumOrani = r.ToplamKitapSayisi > 0 ? (double)r.ToplamYorumSayisi / r.ToplamKitapSayisi : 0;
                var besYildizOrani = r.ToplamYorumSayisi > 0 ? (double)r.BesYildizSayisi / r.ToplamYorumSayisi * 100 : 0;
                var dortArtiOrani = r.ToplamYorumSayisi > 0 ? (double)r.DortArtıYildizSayisi / r.ToplamYorumSayisi * 100 : 0;

                <div class="col-xl-6 col-lg-6">
                    <div class="comment-card">
                        <div class="comment-card-header">
                            <div class="category-badge-large">
                                <i class="bi bi-folder-fill"></i>
                            </div>
                            <div class="category-info">
                                <h4 class="category-name">@r.KategoriAdi</h4>
                                <div class="category-meta">
                                    <span class="meta-item">
                                        <i class="bi bi-book"></i> @r.ToplamKitapSayisi kitap
                                    </span>
                                    <span class="meta-separator">•</span>
                                    <span class="meta-item">
                                        <i class="bi bi-chat"></i> @r.ToplamYorumSayisi yorum
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="comment-card-body">
                            <!-- Puan Gösterimi -->
                            <div class="rating-showcase">
                                <div class="rating-main">
                                    <div class="rating-score">@r.OrtalamaPuan.ToString("0.0")</div>
                                    <div class="rating-stars-large">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(r.OrtalamaPuan))
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            else if (i - r.OrtalamaPuan < 1)
                                            {
                                                <i class="bi bi-star-half"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                        }
                                    </div>
                                    <div class="rating-label">Ortalama Değerlendirme</div>
                                </div>
                            </div>

                            <!-- Metriks Grid -->
                            <div class="metrics-grid">
                                <div class="metric-box">
                                    <div class="metric-icon metric-icon-gold">
                                        <i class="bi bi-star-fill"></i>
                                    </div>
                                    <div class="metric-details">
                                        <div class="metric-value">@r.BesYildizSayisi</div>
                                        <div class="metric-label">5 Yıldız</div>
                                        <div class="metric-percentage">%@besYildizOrani.ToString("0")</div>
                                    </div>
                                </div>

                                <div class="metric-box">
                                    <div class="metric-icon metric-icon-silver">
                                        <i class="bi bi-star-half"></i>
                                    </div>
                                    <div class="metric-details">
                                        <div class="metric-value">@r.DortArtıYildizSayisi</div>
                                        <div class="metric-label">4+ Yıldız</div>
                                        <div class="metric-percentage">%@dortArtiOrani.ToString("0")</div>
                                    </div>
                                </div>

                                <div class="metric-box">
                                    <div class="metric-icon metric-icon-blue">
                                        <i class="bi bi-person-circle"></i>
                                    </div>
                                    <div class="metric-details">
                                        <div class="metric-value">@r.FarkliYorumcuSayisi</div>
                                        <div class="metric-label">Farklı Yorumcu</div>
                                        <div class="metric-percentage">@yorumOrani.ToString("0.0") yorum/kitap</div>
                                    </div>
                                </div>
                            </div>

                            <!-- İlerleme Çubukları -->
                            <div class="progress-bars">
                                <div class="progress-item">
                                    <div class="progress-header">
                                        <span class="progress-title">
                                            <i class="bi bi-star-fill"></i> 5 Yıldız Oranı
                                        </span>
                                        <span class="progress-percent">%@besYildizOrani.ToString("0")</span>
                                    </div>
                                    <div class="progress-bar-container">
                                        <div class="progress-bar-fill progress-bar-gold" style="width: @besYildizOrani.ToString("0")%"></div>
                                    </div>
                                </div>

                                <div class="progress-item">
                                    <div class="progress-header">
                                        <span class="progress-title">
                                            <i class="bi bi-star-half"></i> 4+ Yıldız Oranı
                                        </span>
                                        <span class="progress-percent">%@dortArtiOrani.ToString("0")</span>
                                    </div>
                                    <div class="progress-bar-container">
                                        <div class="progress-bar-fill progress-bar-silver" style="width: @dortArtiOrani.ToString("0")%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Detaylı Karşılaştırma Tablosu -->
        <div class="comparison-section">
            <div class="comparison-header">
                <h3><i class="bi bi-table me-2"></i>Detaylı Karşılaştırma Tablosu</h3>
                <p>Tüm kategorilerin kapsamlı analizi</p>
            </div>
            <div class="table-responsive">
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="th-content">
                                    <i class="bi bi-folder2-open me-2"></i>Kategori
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-book me-2"></i>Kitap
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-chat-left-text me-2"></i>Yorum
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-star me-2"></i>Puan
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-star-fill me-2"></i>5 ⭐
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-star-half me-2"></i>4+ ⭐
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content">
                                    <i class="bi bi-people me-2"></i>Yorumcu
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.OrderByDescending(x => x.OrtalamaPuan))
                        {
                            <tr>
                                <td>
                                    <div class="table-category">
                                        <div class="table-category-icon">
                                            <i class="bi bi-tag-fill"></i>
                                        </div>
                                        <span>@r.KategoriAdi</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="table-badge badge-teal">@r.ToplamKitapSayisi</span>
                                </td>
                                <td class="text-center">
                                    <span class="table-badge badge-indigo">@r.ToplamYorumSayisi</span>
                                </td>
                                <td class="text-center">
                                    <div class="table-rating">
                                        <span class="table-rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(r.OrtalamaPuan))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else if (i - r.OrtalamaPuan < 1)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </span>
                                        <span class="table-rating-value">@r.OrtalamaPuan.ToString("0.0")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="table-badge badge-gold">@r.BesYildizSayisi</span>
                                </td>
                                <td class="text-center">
                                    <span class="table-badge badge-amber">@r.DortArtıYildizSayisi</span>
                                </td>
                                <td class="text-center">
                                    <span class="table-badge badge-rose">@r.FarkliYorumcuSayisi</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

