@using Veritabani_Odevi.DTOs
@using static Veritabani_Odevi.Data.RaporRepository
@model List<KategoriIstatistik>

<div class="container-fluid px-4 py-5">
    <div class="header-section mb-5">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h1 class="display-5 fw-bold text-gradient mb-2">
                    <i class="bi bi-graph-up-arrow me-3"></i>Kategori Bazlı Satış Raporu
                </h1>
                <p class="text-muted mb-0">Kapsamlı kategori performans analizi ve satış metrikleri</p>
            </div>
            <div class="stats-badges">
                <span class="badge-custom">
                    <i class="bi bi-bar-chart-fill me-2"></i>@Model.Count Kategori
                </span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3>Henüz Veri Bulunmuyor</h3>
            <p class="text-muted">Satış verileri burada görünecektir.</p>
        </div>
    }
    else
    {
        <!-- Özet Metrik Kartları -->
        <div class="row g-4 mb-5">
            <div class="col-xl-3 col-md-6">
                <div class="metric-card metric-card-purple">
                    <div class="metric-icon-wrapper">
                        <i class="bi bi-cart-check-fill"></i>
                    </div>
                    <div class="metric-content">
                        <h2>@Model.Sum(x => x.ToplamSatisAdedi)</h2>
                        <p>Sipariş Kalemi</p>
                        <div class="metric-trend">
                            <i class="bi bi-arrow-up"></i>
                            <span>Farklı İşlem Sayısı</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="metric-card metric-card-blue">
                    <div class="metric-icon-wrapper">
                        <i class="bi bi-bookshelf"></i>
                    </div>
                    <div class="metric-content">
                        <h2>@Model.Sum(x => x.ToplamKitapAdedi)</h2>
                        <p>Satılan Adet</p>
                        <div class="metric-trend">
                            <i class="bi bi-arrow-up"></i>
                            <span>Toplam Kitap Adedi</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="metric-card metric-card-green">
                    <div class="metric-icon-wrapper">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="metric-content">
                        <h2>@Model.Sum(x => x.ToplamCiro).ToString("C0")</h2>
                        <p>Toplam Ciro</p>
                        <div class="metric-trend">
                            <i class="bi bi-graph-up"></i>
                            <span>Gelir Toplamı</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="metric-card metric-card-amber">
                    <div class="metric-icon-wrapper">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="metric-content">
                        <h2>@Model.Average(x => x.OrtalamaPuan).ToString("0.0")</h2>
                        <p>Ortalama Puan</p>
                        <div class="metric-trend">
                            <i class="bi bi-trophy"></i>
                            <span>Müşteri Memnuniyeti</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kategori Grid Kartları -->
        <div class="row g-4 mb-5">
            @foreach (var item in Model.OrderByDescending(x => x.ToplamCiro))
            {
                var ciroOrani = (decimal)item.ToplamCiro / Model.Sum(x => x.ToplamCiro) * 100;
                var satisOrani = Model.Sum(x => x.ToplamSatisAdedi) > 0 ? (double)item.ToplamSatisAdedi / Model.Sum(x => x.ToplamSatisAdedi) * 100 : 0;

                <div class="col-xl-4 col-md-6">
                    <div class="category-sales-card">
                        <div class="card-header-custom">
                            <div class="category-icon-box">
                                <i class="bi bi-bookmark-star-fill"></i>
                            </div>
                            <div class="category-title-box">
                                <h4>@item.KategoriAdi</h4>
                                <span class="category-book-count">@item.KategoriKitapSayisi kitap kategoride</span>
                            </div>
                        </div>

                        <div class="card-body-custom">
                            <!-- Ana Metrikler -->
                            <div class="main-metrics">
                                <div class="main-metric">
                                    <div class="main-metric-icon main-metric-purple">
                                        <i class="bi bi-cart3"></i>
                                    </div>
                                    <div class="main-metric-info">
                                        <div class="main-metric-label">Sipariş Kalemi</div>
                                        <div class="main-metric-value">@item.ToplamSatisAdedi</div>
                                    </div>
                                </div>

                                <div class="main-metric">
                                    <div class="main-metric-icon main-metric-blue">
                                        <i class="bi bi-book"></i>
                                    </div>
                                    <div class="main-metric-info">
                                        <div class="main-metric-label">Satılan Adet</div>
                                        <div class="main-metric-value">@item.ToplamKitapAdedi</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Ciro Vurgusu -->
                            <div class="revenue-highlight">
                                <div class="revenue-icon">
                                    <i class="bi bi-cash-stack"></i>
                                </div>
                                <div class="revenue-details">
                                    <div class="revenue-label">Toplam Ciro</div>
                                    <div class="revenue-amount">@item.ToplamCiro.ToString("C")</div>
                                    <div class="revenue-percentage">Toplam cirodaki payı: %@ciroOrani.ToString("0.0")</div>
                                </div>
                            </div>

                            <!-- Puan ve İlerleme -->
                            <div class="rating-progress-section">
                                <div class="rating-display-inline">
                                    <div class="rating-stars-inline">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(item.OrtalamaPuan))
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            else if (i - item.OrtalamaPuan < 1)
                                            {
                                                <i class="bi bi-star-half"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                        }
                                    </div>
                                    <span class="rating-value-inline">@item.OrtalamaPuan.ToString("0.00")</span>
                                </div>

                                <div class="progress-wrapper">
                                    <div class="progress-label-row">
                                        <span>Satış Oranı</span>
                                        <span class="progress-value">%@satisOrani.ToString("0.0")</span>
                                    </div>
                                    <div class="custom-progress-bar">
                                        <div class="custom-progress-fill" style="width: @satisOrani.ToString("0.0")%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Detaylı Tablo -->
        <div class="detailed-table-section">
            <div class="table-section-header">
                <h3><i class="bi bi-table me-2"></i>Detaylı Kategori Analizi</h3>
                <p>Tüm kategorilerin karşılaştırmalı performans verileri</p>
            </div>

            <div class="table-responsive">
                <table class="modern-sales-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="th-content-flex">
                                    <i class="bi bi-tag-fill me-2"></i>Kategori
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content-flex">
                                    <i class="bi bi-cart-check me-2"></i>Sipariş Kalemi
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content-flex">
                                    <i class="bi bi-book-fill me-2"></i>Satılan Adet
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content-flex">
                                    <i class="bi bi-cash me-2"></i>Toplam Ciro
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content-flex">
                                    <i class="bi bi-star me-2"></i>Ortalama Puan
                                </div>
                            </th>
                            <th class="text-center">
                                <div class="th-content-flex">
                                    <i class="bi bi-collection me-2"></i>Kitap Sayısı
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.ToplamCiro))
                        {
                            <tr>
                                <td>
                                    <div class="table-category-cell">
                                        <div class="table-category-avatar">
                                            <i class="bi bi-folder-fill"></i>
                                        </div>
                                        <span class="table-category-name">@item.KategoriAdi</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="table-value-badge badge-purple">@item.ToplamSatisAdedi</span>
                                </td>
                                <td class="text-center">
                                    <span class="table-value-badge badge-blue">@item.ToplamKitapAdedi</span>
                                </td>
                                <td class="text-center">
                                    <span class="table-value-badge badge-green">@item.ToplamCiro.ToString("C")</span>
                                </td>
                                <td class="text-center">
                                    <div class="table-rating-cell">
                                        <span class="table-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(item.OrtalamaPuan))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else if (i - item.OrtalamaPuan < 1)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </span>
                                        <span class="table-rating-number">@item.OrtalamaPuan.ToString("0.00")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="table-value-badge badge-amber">@item.KategoriKitapSayisi</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-total-row">
                            <td>
                                <div class="table-total-label">
                                    <i class="bi bi-calculator me-2"></i>TOPLAM
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="table-total-value">@Model.Sum(x => x.ToplamSatisAdedi)</span>
                            </td>
                            <td class="text-center">
                                <span class="table-total-value">@Model.Sum(x => x.ToplamKitapAdedi)</span>
                            </td>
                            <td class="text-center">
                                <span class="table-total-value table-total-revenue">@Model.Sum(x => x.ToplamCiro).ToString("C")</span>
                            </td>
                            <td class="text-center">
                                <span class="table-total-value">@Model.Average(x => x.OrtalamaPuan).ToString("0.00")</span>
                            </td>
                            <td class="text-center">
                                <span class="table-total-value">@Model.Sum(x => x.KategoriKitapSayisi)</span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
</div>

