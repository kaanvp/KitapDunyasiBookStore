@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const track = document.querySelector('.book-slider-track');
            const cards = Array.from(document.querySelectorAll('.book-slider-card'));
            const dots = Array.from(document.querySelectorAll('.slider-dot'));
            const prevBtn = document.querySelector('.slider-nav-btn.prev');
            const nextBtn = document.querySelector('.slider-nav-btn.next');

            let currentIndex = 0;
            let interval;
            const autoplayDelay = 3000;

            // İlk kartı aktif et
            if (cards.length > 0) {
                cards[0].classList.add('active');
            }

            function updateSlider(index) {
                if (cards.length === 0) return;

                // Aktif kartı güncelle
                cards.forEach(card => card.classList.remove('active'));
                dots.forEach(dot => dot.classList.remove('active'));

                cards[index].classList.add('active');
                if (dots[index]) {
                    dots[index].classList.add('active');
                }

                // Slider'ı kaydır
                const cardWidth = cards[0].offsetWidth;
                const gap = 20;
                const offset = -(index * (cardWidth + gap));
                const centerOffset = (track.parentElement.offsetWidth - cardWidth) / 2;

                track.style.transform = `translateX(${offset + centerOffset}px)`;
                currentIndex = index;
            }

            function nextSlide() {
                const next = (currentIndex + 1) % cards.length;
                updateSlider(next);
            }

            function prevSlide() {
                const prev = (currentIndex - 1 + cards.length) % cards.length;
                updateSlider(prev);
            }

            // Autoplay kontrolü
            function startAutoplay() {
                if (cards.length > 1) {
                    interval = setInterval(nextSlide, autoplayDelay);
                }
            }

            function stopAutoplay() {
                clearInterval(interval);
            }

            // Event listeners
            if (prevBtn) {
                prevBtn.addEventListener('click', () => {
                    prevSlide();
                    stopAutoplay();
                    startAutoplay();
                });
            }

            if (nextBtn) {
                nextBtn.addEventListener('click', () => {
                    nextSlide();
                    stopAutoplay();
                    startAutoplay();
                });
            }

            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    updateSlider(index);
                    stopAutoplay();
                    startAutoplay();
                });
            });

            // Her karta tıklama özelliği
            cards.forEach((card, index) => {
                card.addEventListener('click', () => {
                    updateSlider(index);
                    stopAutoplay();
                    startAutoplay();
                });
            });

            // Hover pause
            if (track) {
                track.addEventListener('mouseenter', stopAutoplay);
                track.addEventListener('mouseleave', startAutoplay);
            }

            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    prevSlide();
                    stopAutoplay();
                    startAutoplay();
                } else if (e.key === 'ArrowRight') {
                    nextSlide();
                    stopAutoplay();
                    startAutoplay();
                }
            });

            // İlk görünümü ayarla
            updateSlider(0);
            startAutoplay();

            // Pencere boyutu değiştiğinde yeniden konumlandır
            window.addEventListener('resize', () => {
                updateSlider(currentIndex);
            });
        });
    </script>
