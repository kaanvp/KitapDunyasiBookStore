@section Styles {
    <style>
        :root {
            --primary-color: #16202A;
            --primary-light: #1E2A38;
            --secondary-color: #3B82F6;
            --accent-color: #F59E0B;
            --success-color: #10B981;
            --dark-color: #0F1419;
            --light-gray: #1A2332;
            --medium-gray: #374151;
            --text-color: #F9FAFB;
            --text-secondary: #D1D5DB;
            --text-muted: #9CA3AF;
            --border-color: #374151;
            --card-bg: #1E2A38;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.4);
        }

        /* Ana Sayfa Stilleri */
        .home-hero {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            padding: 80px 20px;
            color: var(--text-color);
            text-align: center;
            border-bottom: 2px solid var(--secondary-color);
        }

        .home-hero h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .home-hero p {
            font-size: 1.3rem;
            margin-bottom: 30px;
            color: var(--text-secondary);
        }

        /* Kısayol Butonları Konteyner */
        .shortcuts-container {
            max-width: 1200px;
            margin: 60px auto;
            padding: 0 20px;
        }

        .shortcuts-title {
            text-align: center;
            font-size: 2rem;
            color: var(--text-color);
            margin-bottom: 50px;
            font-weight: 600;
        }

        .shortcuts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 25px;
            margin-bottom: 60px;
        }

        .shortcut-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            background: var(--card-bg);
            border: 2px solid var(--border-color);
            border-radius: 12px;
            text-decoration: none;
            color: var(--text-color);
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
            min-height: 200px;
            position: relative;
            overflow: hidden;
        }

        .shortcut-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.5s ease;
        }

        .shortcut-btn:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-lg);
            border-color: var(--secondary-color);
            background: var(--primary-light);
        }

        .shortcut-btn:hover::before {
            left: 100%;
        }

        .shortcut-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            transition: transform 0.3s ease;
        }

        .shortcut-btn:hover .shortcut-icon {
            transform: scale(1.1);
        }

        .shortcut-text {
            font-size: 1.1rem;
            font-weight: 600;
            text-align: center;
        }

        /* Renkli Butonlar */
        .shortcut-btn.btn-kitap {
            border-color: var(--accent-color);
        }

        .shortcut-btn.btn-kitap:hover {
            background: rgba(245, 158, 11, 0.1);
        }

        .shortcut-btn.btn-arama {
            border-color: var(--secondary-color);
        }

        .shortcut-btn.btn-arama:hover {
            background: rgba(59, 130, 246, 0.1);
        }

        .shortcut-btn.btn-sepet {
            border-color: var(--success-color);
        }

        .shortcut-btn.btn-sepet:hover {
            background: rgba(16, 185, 129, 0.1);
        }

        .shortcut-btn.btn-siparis {
            border-color: var(--accent-color);
        }

        .shortcut-btn.btn-siparis:hover {
            background: rgba(245, 158, 11, 0.1);
        }

        .shortcut-btn.btn-hesap {
            border-color: var(--secondary-color);
        }

        .shortcut-btn.btn-hesap:hover {
            background: rgba(59, 130, 246, 0.1);
        }

        .shortcut-btn.btn-rapor {
            border-color: var(--success-color);
        }

        .shortcut-btn.btn-rapor:hover {
            background: rgba(16, 185, 129, 0.1);
        }

        .shortcut-btn.btn-kategori {
            border-color: var(--accent-color);
        }

        .shortcut-btn.btn-kategori:hover {
            background: rgba(245, 158, 11, 0.1);
        }

        .shortcut-btn.btn-indirim {
            border-color: var(--secondary-color);
        }

        .shortcut-btn.btn-indirim:hover {
            background: rgba(59, 130, 246, 0.1);
        }

        /* Features Bölümü */
        .features-section {
            background: var(--primary-color);
            padding: 60px 20px;
            margin-top: 40px;
            border-top: 2px solid var(--border-color);
        }

        .features-grid {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }

        .feature-card {
            background: var(--card-bg);
            padding: 30px;
            border-radius: 10px;
            box-shadow: var(--shadow);
            text-align: center;
            border: 1px solid var(--border-color);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .feature-card h3 {
            color: var(--text-color);
            margin-bottom: 10px;
        }

        .feature-card p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        /* Book Slider Styles */
        .book-slider-container {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding: 60px 20px;
            position: relative;
            overflow: hidden;
            background: transparent;
            background-size: cover;
        }

        .book-slider-track {
            display: flex;
            gap: 20px;
            transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            padding: 20px 40px;
        }

        .book-slider-card {
            min-width: 280px;
            height: 420px;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-lg);
            transform-origin: center center;
            border: 2px solid var(--border-color);
        }

            .book-slider-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .book-slider-card.active {
                transform: scale(1.15);
                z-index: 2;
                box-shadow: var(--shadow-lg);
                border-color: var(--secondary-color);
            }

            .book-slider-card:not(.active) {
                opacity: 0.7;
            }

        .slider-nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background: rgba(59, 130, 246, 0.3);
            border: 2px solid var(--secondary-color);
            border-radius: 50%;
            color: var(--text-color);
            font-size: 24px;
            cursor: pointer;
            transition: all 0.3s;
            z-index: 10;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .slider-nav-btn:hover {
                background: rgba(59, 130, 246, 0.5);
                box-shadow: 0 0 15px rgba(59, 130, 246, 0.5);
            }

            .slider-nav-btn.prev {
                left: 20px;
            }

            .slider-nav-btn.next {
                right: 20px;
            }

        .slider-dots {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 8px;
        }

        .slider-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
        }

            .slider-dot.active {
                background: var(--secondary-color);
                transform: scale(1.2);
                box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
            }

        /* Book Categories Styles */
        .book-categories {
            background-color: var(--primary-color);
        }

        .book-card {
            background: var(--card-bg);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
        }

            .book-card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-lg);
                border-color: var(--secondary-color);
            }

        .book-card-inner {
            position: relative;
        }

        .book-cover-container {
            position: relative;
            overflow: hidden;
            height: 200px;
            background: var(--light-gray);
        }

        .book-cover {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .book-card:hover .book-cover {
            transform: scale(1.05);
        }

        .book-title {
            font-weight: 600;
            color: var(--text-color);
        }

        .book-author {
            font-size: 0.9em;
            color: var(--text-muted);
        }

        .book-price {
            font-size: 1.1em;
            color: var(--success-color) !important;
            font-weight: 700;
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .book-slider-card {
                min-width: 240px;
                height: 360px;
            }
        }

        @@media (max-width: 768px) {
            .book-slider-card {
                min-width: 200px;
                height: 300px;
            }

                .book-slider-card.active {
                    transform: scale(1.1);
                }

            .book-slider-container {
                padding: 40px 10px;
            }
        }

        @@media (max-width: 480px) {
            .book-slider-track {
                gap: 10px;
                padding: 10px;
            }

            .book-slider-card {
                min-width: 160px;
                height: 240px;
            }

            .slider-nav-btn {
                width: 32px;
                height: 32px;
                font-size: 20px;
            }
        }

        /* Indirim Bölümü Stilleri */
        .discount-banner {
            background: linear-gradient(135deg, #EF4444 0%, #F59E0B 100%);
            padding: 50px 20px;
            border-radius: 12px;
            margin-bottom: 60px;
            color: var(--text-color);
        }

        .discount-banner h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .discount-banner p {
            font-size: 1.1rem;
            margin-bottom: 20px;
            color: var(--text-secondary);
        }

        .discount-banner .btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid var(--text-color);
            color: var(--text-color);
            padding: 12px 32px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .discount-banner .btn:hover {
            background: var(--text-color);
            color: #EF4444;
        }
    </style>
}

