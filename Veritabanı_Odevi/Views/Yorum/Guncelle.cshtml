@model Veritabani_Odevi.Models.Yorum

<h3>Yorum Güncelle</h3>

<form asp-action="Guncelle" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="YorumID" />
    <input type="hidden" asp-for="KitapID" />
    <input type="hidden" asp-for="KullaniciID" />

    <div class="mb-2">
        <label>Başlık</label>
        <input asp-for="Baslik" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Yorum</label>
        <textarea asp-for="Icerik" class="form-control"></textarea>
    </div>

    <div class="mb-2">
        <label>Puan</label>
        <select asp-for="Puan" class="form-control">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i" @@(Model.Puan == i ? "selected" : "")>@i</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>

<!-- ======================== -->
<!-- Silme Butonu -->
<!-- ======================== -->
<form asp-controller="Yorum" asp-action="Sil" method="post" style="margin-top:10px;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="yorumID" value="@Model.YorumID" />
    <input type="hidden" name="kullaniciID" value="@Model.KullaniciID" />
    <input type="hidden" name="kitapID" value="@Model.KitapID" />

    <button class="btn btn-danger"
            onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?');">
        Sil
    </button>
</form>
