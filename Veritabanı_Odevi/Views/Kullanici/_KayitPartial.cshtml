@model Veritabani_Odevi.Models.ViewModels.KayitViewModel

<form asp-controller="Kullanici" asp-action="Kayit" method="post">
    @Html.AntiForgeryToken()

    <h2>Hesap Oluştur</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input asp-for="FullName" placeholder="Ad Soyad" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Email" placeholder="E-posta Adresi" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group">
            <input asp-for="Password" type="password" placeholder="Şifre" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" placeholder="Şifre Tekrar" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="submit-btn">Kayıt Ol</button>
</form>
