    }

    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--secondary-color) 0%, var(--accent-color) 100%);
        padding: 50px 30px;
        border-radius: 12px;
        margin-bottom: 60px;
        text-align: center;
        color: var(--text-color);
    }

    .page-header h1 {
