        margin: 0 0 10px 0;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .page-header p {
        font-size: 1.1rem;
        color: var(--text-secondary);
        margin: 0;
    }

    .operations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .operation-card {
        background: var(--card-bg);
        border: 2px solid var(--border-color);
        border-radius: 12px;
        padding: 40px 30px;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: var(--shadow);
        cursor: pointer;
        text-decoration: none;
        color: var(--text-color);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 250px;
    }

    .operation-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
        border-color: var(--secondary-color);
    }

    /* Card Variant Classes */
    .operation-card.kitap-listele {
        border-color: var(--secondary-color);
    }

    .operation-card.kitap-listele:hover {
        background: rgba(59, 130, 246, 0.1);
        border-color: var(--secondary-color);
    }

    .operation-card.kitap-ekle {
        border-color: var(--success-color);
    }

    .operation-card.kitap-ekle:hover {
        background: rgba(16, 185, 129, 0.1);
        border-color: var(--success-color);
    }

    .operation-card.kitap-duzenle {
        border-color: var(--accent-color);
    }

    .operation-card.kitap-duzenle:hover {
        background: rgba(245, 158, 11, 0.1);
        border-color: var(--accent-color);
    }

    .operation-card.kitap-sil {
        border-color: var(--danger-color);
    }

    .operation-card.kitap-sil:hover {
        background: rgba(239, 68, 68, 0.1);
        border-color: var(--danger-color);
    }

    .card-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        display: block;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .card-description {
        color: var(--text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 24px;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        color: var(--text-color);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-bottom: 40px;
    }

    .back-button:hover {
        background: var(--primary-light);
        border-color: var(--secondary-color);
    }

    .info-box {
        background: rgba(59, 130, 246, 0.1);
        border-left: 4px solid var(--secondary-color);
        padding: 20px;
        border-radius: 8px;
        margin-top: 40px;
        color: var(--text-secondary);
    }

    .info-box strong {
        color: var(--text-color);
    }
</style>

